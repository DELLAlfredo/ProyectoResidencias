<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reporte_semanal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/f4"
    tools:context=".ReporteSemanal">

    <Spinner
        android:id="@+id/SpHora"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/customspiner"
        android:foregroundTint="#0B0A0A"

        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnreporte"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/Spaction"
        android:layout_width="177dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/SpHora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SpHora"
        app:layout_constraintTop_toTopOf="@+id/SpHora"

        android:background="@drawable/customspiner"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2749658" />


    <Button
        android:id="@+id/btnreporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#32DF3A"
        android:text="GENERAR REPORTE"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="502dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        tools:context=".ReporteSemanal">

        <TableLayout
            android:id="@+id/tabla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <!-- Fila de encabezados -->
            <TableRow android:layout_height="85dp">

                <TextView
                    android:layout_column="1"
                    android:background="@android:color/holo_blue_light"
                    android:padding="5dp"
                    android:text="Nombre de Aula"
                    android:textStyle="bold" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:background="@android:color/holo_blue_light"
                    android:padding="5dp"
                    android:text="Nombre de Docente"
                    android:textStyle="bold" />

                <TextView
                    android:layout_column="3"
                    android:background="@android:color/holo_blue_light"
                    android:padding="5dp"
                    android:text="Acción"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Filas dinámicas para mostrar los datos -->
            <!-- Se agregarán dinámicamente desde el código Java -->

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>